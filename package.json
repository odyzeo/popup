{
    "name": "@odyzeo/popup",
    "version": "3.1.0",
    "description": "Odyzeo popup component with Vue",
    "main": "dist/popup.common.js",
    "keywords": [
        "odyzeo",
        "popup",
        "renderless",
        "plugin",
        "vue"
    ],
    "author": "Odyzeo <tomas.zamba@odyzeo.com, svetozar.sadecky@odyzeo.com> (https://odyzeo.com)",
    "publishConfig": {
        "access": "public"
    },
    "license": "ISC",
    "scripts": {
        "serve": "vue-cli-service serve",
        "build": "vue-cli-service build",
        "build-lib": "vue-cli-service build --target lib --name popup ./src/plugin/popup.js",
        "vercel-build": "npm i vue --save-dev && vue-cli-service build",
        "lint": "vue-cli-service lint"
    },
    "style": "dist/popup.css",
    "repository": {
        "type": "git",
        "url": "https://github.com/odyzeo/popup.git"
    },
    "files": [
        "dist/*",
        "src/*",
        "public/*",
        "*.json",
        ".js"
    ],
    "devDependencies": {
        "@babel/eslint-parser": "^7.14.3",
        "@babel/eslint-plugin": "^7.13.16",
        "@vue/cli-plugin-babel": "^4.5.13",
        "@vue/cli-service": "^4.5.13",
        "@vue/eslint-config-airbnb": "^5.3.0",
        "eslint": "^7.23.0",
        "eslint-plugin-vue": "^7.8.0",
        "less": "^3.0.4",
        "less-loader": "^5.0.0",
        "normalize.css": "^8.0.1",
        "vue-template-compiler": "^2.6.12"
    },
    "peerDependencies": {
        "vue": ">= 2.6.10 < 3"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "browser": true,
            "es6": true
        },
        "extends": [
            "plugin:vue/recommended",
            "@vue/airbnb"
        ],
        "rules": {
            "indent": 0,
            "vue/script-indent": [
                2,
                4
            ],
            "vue/html-indent": [
                2,
                4
            ],
            "vue/require-v-for-key": 1,
            "vue/html-self-closing": [
                2,
                {
                    "html": {
                        "normal": "never",
                        "component": "never"
                    }
                }
            ],
            "camelcase": 0,
            "import/extensions": [
                2,
                "ignorePackages",
                {
                    "js": "never",
                    "vue": "never"
                }
            ],
            "import/prefer-default-export": 0,
            "no-param-reassign": [
                2,
                {
                    "props": false
                }
            ]
        },
        "parserOptions": {
            "parser": "babel-eslint"
        }
    },
    "postcss": {
        "plugins": {
            "autoprefixer": {}
        }
    },
    "browserslist": [
        "defaults",
        "> 0.5% in SK"
    ]
}
